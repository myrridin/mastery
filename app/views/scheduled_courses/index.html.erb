<p id="notice"><%= notice %></p>

<h1>Listing Scheduled Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Size</th>
      <th>Scheduled on</th>
      <th>Location</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scheduled_courses.each do |scheduled_course| %>
      <tr>
        <td><%= scheduled_course.course %></td>
        <td><%= scheduled_course.size %></td>
        <td><%= scheduled_course.scheduled_on %></td>
        <td><%= scheduled_course.location %></td>
        <td><%= scheduled_course.user %></td>
        <td><%= link_to 'Show', scheduled_course %></td>
        <td><%= link_to 'Edit', edit_scheduled_course_path(scheduled_course) %></td>
        <td><%= link_to 'Destroy', scheduled_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

