<p id="notice"><%= notice %></p>

<h1>Listing Offerings</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Size</th>
      <th>Scheduled on</th>
      <th>Location</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offerings.each do |offering| %>
      <tr>
        <td><%= offering.course %></td>
        <td><%= offering.size %></td>
        <td><%= offering.scheduled_at %></td>
        <td><%= offering.location %></td>
        <td><%= offering.user %></td>
        <td><%= link_to "Sign up for this course", sign_up_for_offering_path(offering) %></td>
        <td><%= link_to 'Show', offering %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

