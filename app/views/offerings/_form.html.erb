<%= simple_form_for(@offering) do |f| %>
  <%= f.label "Course" %>
  <%= f.collection_select(:course_id, Course.all, :id, :to_s, {}, {class: "form-control"}) %><br />
  <%= f.input :size %>
  <%= f.input :scheduled_at, label: "Start Time", as: :date_time_picker %>
  <%= f.input :location %>
  <%= f.button :submit, class: "btn btn-success" %>
  <%= link_to "Cancel", offerings_path, class: "btn btn-danger" %>
<% end %>
