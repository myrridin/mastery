<%= simple_form_for(@course) do |f| %>
  <%= f.input :section %>
  <%= f.input :number %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :length, label: "Length in minutes" %>
  <%= f.label "Teacher" %>
  <%= f.collection_select(:user_id, User.instructors, :id, :name, {include_blank: "None"}, {class: "form-control"}) %><br />
  <%= f.button :submit, class: "btn btn-success" %>
  <%= link_to "Cancel", courses_path, class: "btn btn-danger" %>
<% end %>
